n=int(input())
stair=[]
for i in range(n):
    stair.append(int(input()))
    
sum1=[stair[0],stair[0]+stair[1],max(stair[0]+stair[2],stair[1]+stair[2])]

for i in range(3,n):
    sum1.append(max(sum1[i-2]+stair[i], sum1[i-3]+stair[i-1]+stair[i]))


print(sum1[-1])


n=int(input())

for i in range(n):
    x_1= input()
    p_1=0
    for j in x_1:
        if p_1<0:
            break
        elif j=='(':
            p_1+=1
        elif j==')':
            p_1= p_1-1
    if p_1==0:
        print('YES')
    else:
        print('NO')
        
